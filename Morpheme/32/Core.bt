typedef struct
{
    float i;
    float j;
    float k;
    float w;
} Quaternion <read=ReadQuaternion>;

string ReadQuaternion ( Quaternion &quat )
{
    string c_res;

    SPrintf(c_res, "(%.3f, %.3f, %.3f, %.3f)\n", quat.i, quat.j, quat.k, quat.w);
    return c_res;
}

