local uint ptrSize = 4;
typedef uint pointer;

void PadToAlignment(int iAlignment)
{
    if (iAlignment == 0)
        return;
        
    local quad pPos = FTell();
    local quad remainder = pPos % iAlignment;
	
	if (remainder != 0)
		FSeek(pPos + (iAlignment - remainder));
}

void Skip(int iAmt)
{
    FSeek(FTell() + iAmt);
}

